<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".ActivityListData2" 
    android:background="#1e1e1e">
 
    <LinearLayout 
        android:id="@+id/ald2_ll_headingcontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/ald2_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_gen"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/ald2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_gen"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/ald2_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_gen"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/ald2_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_gen"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/ald2_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_gen"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/ald2_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_date"
            android:visibility="gone"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView 
        android:id="@+id/ald2_lv"
        android:layout_below="@id/ald2_ll_headingcontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>    
    
    
</RelativeLayout>